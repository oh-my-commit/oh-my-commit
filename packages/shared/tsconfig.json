{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "moduleResolution": "Node", // 覆盖以支持 Node.js 模块

    "outDir": "./dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/common/index.ts",
    "src/server/index.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": []
}
